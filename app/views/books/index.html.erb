    <h1><%= notice %></h1>

    <%= link_to "Tambah Data Buku" , new_book_path, class: "btn btn-primary" %>

    <table border="1" style="text-align:center;">
        <tr>
        <% no=1  %>
            <td> no </td>
            <td> judul </td>
            <td> harga </td>
            <td> halaman </td>
            <td> deskripsi </td>
            <td colspan="2">aksi </td>
        </tr>
        <%  @books.each do |book| %>
        <tr>
            <td> <%= no %> </td>
            <td> <%= book.title %> </td>
            <td> <%= book.price %> </td>
            <td> <%= book.page %> </td>
            <td> <%= book.description %> </td>
            <td> <%= link_to "edit"  ,edit_book_path(book) %> </td>
            <td> <%= link_to "delete"  ,book_path(book), method: :delete, data: {confirm: "Yakin '#{book.title}' Akan Di Hapus ?"} %> </td>
        </tr>
        <% no+=1 end %>  
    </table>
